{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ESNext",
		"lib": ["ES2015", "DOM"],
		"jsx": "react",
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "**/*.test.tsx", "**/*.test.ts"]
}

